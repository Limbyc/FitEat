<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recordedweight"
            android:layout_width="334dp"
            android:layout_height="130dp"
            android:background="@drawable/item_decoration"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center|bottom"
            android:paddingBottom="40dp"
            android:text="Вес записан"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/recordedweight"
            android:layout_alignBottom="@+id/recordedweight"
            android:layout_alignParentStart="true"
            android:layout_marginStart="141dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="61dp"
            android:background="@drawable/smile" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/recordedweight"
            android:layout_alignBottom="@+id/recordedweight"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_light"
            android:text="Желаете изменить?"
            android:textColor="@color/text_color"
            android:textSize="15sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>