<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/currentchanges"
        android:layout_width="323dp"
        android:layout_height="130dp"
        android:background="@drawable/item_decoration"
        android:text="Внесите свои изменения сеголня"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:gravity="center|top"
        android:padding="16dp"
        android:fontFamily="@font/montserrat_light"/>

        <EditText
            android:id="@+id/EtNewWeight"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/currentchanges"
            android:layout_alignBottom="@+id/currentchanges"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="49dp"
            android:gravity=""
            android:hint="Вес"
            android:fontFamily="@font/montserrat_light"
            android:textColorHint="@color/text_color"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:backgroundTint="@color/black"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/currentchanges"
            android:layout_alignParentTop="true"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/montserrat_light"
            android:text="кг"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/currentchanges"
            android:layout_alignBottom="@+id/currentchanges"
            android:layout_marginEnd="108dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Принять"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/currentchanges"
            android:layout_alignBottom="@+id/currentchanges"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Отменить"
            android:textColor="@color/text_color"
            android:textSize="15sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>