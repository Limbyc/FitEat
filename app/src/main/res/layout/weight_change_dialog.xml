<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/TodayWeightChanges"
        android:layout_width="323dp"
        android:layout_height="130dp"
        android:background="@drawable/item_decoration"
        android:textColor="@color/text_color"
        android:text="Внесите свои изменения сегодня"
        android:padding="20dp"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat_light"/>

        <EditText
            android:id="@+id/EtNewWeight"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="43dp"
            android:fontFamily="@font/montserrat_light"
            android:hint="Вес"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="15sp"
            android:maxLength="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TodayWeightChanges"
            android:layout_alignBottom="@+id/TodayWeightChanges"
            android:layout_marginStart="-249dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="51dp"
            android:fontFamily="@font/montserrat_light"
            android:text="кг"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TodayWeightChanges"
            android:layout_alignBottom="@+id/TodayWeightChanges"
            android:layout_marginEnd="115dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Принять"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TodayWeightChanges"
            android:layout_alignBottom="@+id/TodayWeightChanges"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Отменить"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>